@{
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
    ViewBag.Title = "Create Multiple Choice Question";
}

<h2>Create Multiple Choice Question</h2><br />
@using (Html.BeginForm("Create", "MCQuestions", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="section" id="section0">
        <div class="form-group spacing" style="width:200px;float:left;">
            @Html.Label("Question Description:")
            <input type="text" class="form-control" name="MCQuestionDescription" id="MCQuestionDescription" placeholder="ex: Can you work overtime hours?" />
        </div>
        <br style="clear:both;"/>
    </div>
    
    <a href="@Html.Encode("/Home/Backend")" class="btn btn-danger">Cancel</a>@Html.Raw("&nbsp;&nbsp;&nbsp;")
    <input type="submit" id="submit" value="Save" class="btn btn-success" />
}